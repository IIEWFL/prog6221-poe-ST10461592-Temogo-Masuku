<Window x:Class="CybersecurityChatbot.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Learning Assistant Loading..." 
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Black"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    <Border BorderBrush="DodgerBlue" BorderThickness="3" CornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logo Display Area -->
            <ScrollViewer Grid.Row="0" 
                        HorizontalScrollBarVisibility="Auto"
                        VerticalScrollBarVisibility="Auto"
                        Margin="40">
                <TextBlock Name="LogoTextBlock"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         FontFamily="Arial"
                         FontSize="11"
                         Foreground="LimeGreen"
                         TextWrapping="NoWrap"
                         LineHeight="12"
                         FontWeight="Normal"/>
            </ScrollViewer>

            <!-- Title Text -->
            <TextBlock Grid.Row="1"
                     Text="CYBERSECURITY ASSISTANT"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Margin="0,20,0,30"
                     FontSize="20"
                     Foreground="White"
                     FontWeight="Bold"/>

            <!-- Loading Message -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,40">
                <TextBlock Name="LoadingTextBlock"
                         Text="Loading application"
                         FontSize="14"
                         Foreground="LightGray"
                         VerticalAlignment="Center"/>
                <TextBlock Name="DotsTextBlock"
                         Text="..."
                         FontSize="14"
                         Foreground="DodgerBlue"
                         FontWeight="Bold"
                         VerticalAlignment="Center"
                         Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>